# Password for public LXC containers (Plex)
password_lxc_plex = "VeryStrongPassword123!"

# Password for private LXC containers (all other containers)
password_lxc = "Password456!"

# Proxmox API URL (change IP to match your Proxmox server)
proxmox_api_url = "https://192.168.1.XXX:8006/api2/json"

# Proxmox user credentials (root@pam is default, but you should create a dedicated user)
proxmox_user = "root@pam"
proxmox_password = "YourStrongProxmoxPassword"

# NordVPN token for qBittorrent container (get from NordVPN account dashboard)
token_nordvpn = "abcdef1234567890"

# SSH public key(s) for container access (from your ~/.ssh/id_ed25519.pub or similar)
ssh_public_keys = "ssh-ed25519 xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx user@host"
